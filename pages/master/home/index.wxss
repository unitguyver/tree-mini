/* pages/master/home/index.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.content{
  width: 100%;
  height: 1px;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.header-wrapepr{
  width: 100%;
  height: 400rpx;
  background-color: #ffff00;
  box-sizing: border-box;
  padding: 20rpx;
}

.header{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  border-radius: 8rpx;
  border: 1px solid #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.avater{
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 50rpx;
  flex-shrink: 0;
}

.info{
  width: 1px;
  height: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.statistics{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.statistics .item{
  width: 1rpx;
  flex-grow: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}